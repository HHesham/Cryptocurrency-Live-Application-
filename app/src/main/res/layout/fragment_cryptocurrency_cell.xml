<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/currency_text"
        style="@style/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/selection_box"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/price_text"
        android:layout_below="@id/currency_text"
        style="@style/desc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/volume_24h_text"
        style="@style/desc_text_view"
        android:layout_below="@id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/market_cap_text"
        style="@style/desc_text_view"
        android:layout_below="@id/volume_24h_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>